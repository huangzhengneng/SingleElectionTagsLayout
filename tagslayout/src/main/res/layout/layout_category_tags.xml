<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_main_tag"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="全部"
        android:textSize="14sp"
        android:background="@drawable/tag_view_bg"
        android:textColor="#000000" />

    <com.huangzn.tagslayout.TagContainerLayout
        android:id="@+id/tag_view_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:container_background_color="@android:color/white"
        app:container_border_color="@android:color/white"
        app:container_border_radius="0dp"
        app:container_border_width="0dp"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:tag_text_size="14sp"
        app:tag_text_color="#000000"
        app:tag_background="@drawable/tag_view_bg"
        app:tag_border_color="@android:color/white"
        app:tag_border_width="0dp"
        app:tag_clickable="true"
        app:tag_corner_radius="5dp"
        app:vertical_interval="10dp"
        app:tag_background_color="@android:color/white"/>

</LinearLayout>